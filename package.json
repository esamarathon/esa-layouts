{
  "name": "esa-layouts",
  "version": "1.0.0",
  "description": "The on-screen graphics used during European Speedrunner Assembly (and other relevant) events.",
  "homepage": "https://github.com/esamarathon/esa-layouts#readme",
  "bugs": {
    "url": "https://github.com/esamarathon/esa-layouts/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/esamarathon/esa-layouts.git"
  },
  "license": "MIT",
  "author": "zoton2",
  "contributors": [
    "BtbN"
  ],
  "scripts": {
    "autofix": "run-s autofix:*",
    "autofix:browser": "eslint --fix --ext .ts,.vue src/dashboard && eslint --fix --ext .ts,.js,.vue src/graphics && eslint --fix --ext .ts src/browser_shared",
    "autofix:extension": "eslint --fix --ext .ts src/extension",
    "build": "run-s build:*",
    "build:browser": "cross-env NODE_ENV=production webpack",
    "build:extension": "tsc -b tsconfig.extension.json",
    "clean": "trash node_modules/.cache && trash dashboard && trash graphics && trash extension",
    "start": "node ../..",
    "typeschemas": "node script/typeschemas.js",
    "watch": "run-p watch:*",
    "watch:browser": "webpack -w",
    "watch:extension": "tsc -b tsconfig.extension.json -w"
  },
  "dependencies": {
    "amqp-connection-manager": "^3.2.0",
    "amqplib": "^0.5.5",
    "lodash": "^4.17.19",
    "moment": "^2.24.0",
    "mpd": "^1.3.0",
    "needle": "^2.4.0",
    "obs-websocket-js": "^4.0.1",
    "speedcontrol-util": "^0.4.1",
    "streamdeck-util": "^0.3.3",
    "xkeys": "^0.1.2"
  },
  "devDependencies": {
    "@mdi/font": "^4.9.95",
    "@types/amqp-connection-manager": "^2.0.5",
    "@types/amqplib": "^0.5.13",
    "@types/clone": "^0.1.30",
    "@types/lodash": "^4.14.149",
    "@types/needle": "^2.0.4",
    "@types/uuid": "^3.4.7",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "@vue/component-compiler-utils": "^3.1.1",
    "clone": "^2.1.2",
    "copy-webpack-plugin": "^5.1.1",
    "cross-env": "^7.0.0",
    "css-loader": "^3.4.2",
    "deepmerge": "^4.2.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-vue": "^6.1.2",
    "fibers": "^4.0.2",
    "file-loader": "^5.0.2",
    "fork-ts-checker-webpack-plugin": "^4.0.4",
    "globby": "^11.0.0",
