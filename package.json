    "hard-source-webpack-plugin": "^0.13.1",
    "html-webpack-plugin": "^4.0.0-beta.8",
    "jsmediatags": "^3.9.3",
    "json-schema-to-typescript": "^8.0.1",
    "mini-css-extract-plugin": "^0.9.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.25.0",
    "sass-loader": "^8.0.2",
    "trash-cli": "^3.0.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.5",
    "uuid": "^3.4.0",
    "vue": "^2.6.11",
    "vue-class-component": "^7.2.3",
    "vue-hot-reload-api": "^2.3.4",
    "vue-loader": "^15.9.0",
    "vue-property-decorator": "^8.4.0",
    "vue-router": "^3.1.5",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.6.11",
    "vuedraggable": "^2.23.2",
    "vuetify": "^2.2.12",
    "vuetify-loader": "^1.4.3",
    "vuex": "^3.1.2",
    "vuex-class": "^0.3.2",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11",
    "webpack-livereload-plugin": "^2.2.0"
  },
  "nodecg": {
    "compatibleRange": "^1.5.0",
    "bundleDependencies": {
      "nodecg-speedcontrol": "^2.0.0"
    },
    "dashboardPanels": [
      {
        "name": "game-layout-override",
        "title": "Game Layout Override",
        "width": 2,
        "file": "game-layout-override.html",
        "workspace": "ESA",
        "headerColor": "#c49215"
      },
      {
        "name": "sponsor-logo-control",
        "title": "Sponsor Logo Control",
        "width": 3,
        "file": "sponsor-logo-control.html",
        "workspace": "ESA",
        "headerColor": "#c49215"
      },
      {
        "name": "commentators",
        "title": "Commentators",
        "width": 2,
        "file": "commentators.html",
        "workspace": "ESA",
        "headerColor": "#c49215"
      },
      {
        "name": "tts-control",
        "title": "Text-To-Speech Control",
        "width": 3,
        "file": "tts-control.html",
        "workspace": "ESA",
        "headerColor": "#c49215"
      },
      {
        "name": "video-player-control",
        "title": "Video Player Control",
        "width": 3,
        "file": "video-player-control.html",
        "workspace": "ESA",
        "headerColor": "#c49215"
      },
      {
        "name": "intermission-control",
        "title": "Intermission Control",
        "width": 3,
        "file": "intermission-control.html",
        "workspace": "ESA",
        "headerColor": "#c49215"
      },
      {
        "name": "smb-relay-control",
        "title": "SMB Relay Control",
        "width": 2,
        "file": "smb-relay-control.html",
        "workspace": "ESA",
        "headerColor": "#c49215"
      }
    ],
    "graphics": [
      {
        "file": "intermission.html",
        "width": 1920,
        "height": 1080
      },
      {
        "file": "intermission-hosts.html",
        "width": 1920,
        "height": 1080
      },
      {
        "file": "game-layout.html",
        "width": 1920,
        "height": 1080
      },
      {
        "file": "omnibar.html",
        "width": 1920,
        "height": 80
      },
      {
        "file": "video-player.html",
        "width": 1920,
        "height": 1080
      },
      {
        "file": "donations.html",
        "width": 1920,
        "height": 1080
      },
      {
        "file": "host-dashboard.html",
        "width": 1920,
        "height": 1080
      },
      {
        "file": "tts-player.html",
        "width": 1920,
        "height": 1080
      },
      {
        "file": "player-hud.html",
        "width": 800,
        "height": 480
      },
      {
        "file": "music-player.html",
        "width": 1920,
        "height": 1080,
        "singleInstance": true
      }
    ],
    "mount": [
      {
        "directory": "static",
        "endpoint": "static"
      }
    ],
    "assetCategories": [
      {
        "name": "sponsor-logos",
        "title": "Sponsor Logos",
        "allowedTypes": [
          "jpg",
          "jpeg",
          "png",
          "svg"
        ]
      },
      {
        "name": "videos",
        "title": "Videos",
        "allowedTypes": [
          "mp4"
        ]
      },
      {
        "name": "intermission-slides",
        "title": "Intermission Slide Images/Videos",
        "allowedTypes": [
          "jpg",
          "jpeg",
          "png",
          "svg",
          "mp4"
        ]
      },
      {
        "name": "music",
        "title": "Music Tracks",
        "allowedTypes": [
          "mp3"
        ]
      }
    ]
  }
}
