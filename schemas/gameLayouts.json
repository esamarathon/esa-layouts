{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "available": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string"
          },
          "code": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "code"
        ]
      },
      "default": []
    },
    "selected": {
      "type": "string"
    },
    "crowdCamera": {
      "type": "boolean",
      "default": true
    }
  },
  "required": [
    "available",
    "crowdCamera"
  ]
}